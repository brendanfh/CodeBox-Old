    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sass Compile",
            "type": "shell",
            "command": "yarn run sass -I ${workspaceFolder}/wev/static/scss/ ${workspaceFolder}/web/static/scss/core.scss ${workspaceFolder}/web/static/css/core.css",
            "problemMatcher": [
                "$node-sass"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/web/static"
            }
        }
