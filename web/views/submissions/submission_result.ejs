<% layout("/partials/problem") %>

<script src="/socket.io/socket.io.js" type="text/javascript"></script>
<script src="/static/js/submission_result_live_reload.js" type="text/javascript"></script>

<link rel="stylesheet" href="/static/css/highlight-styles/vs2015.css">
<script src="/static/js/highlight.pack.js"></script>
<script src="/static/js/highlight-line-numbers.js"></script>
<script>
    hljs.initHighlightingOnLoad();
    hljs.initLineNumbersOnLoad();

    window.PROBLEM_ID = "<%- job.problem %>";
</script>

<div class="content">
    <div class="result-status">
    </div>

    <div class="result-progress-bar-outline">
        <div class="result-progress-bar" style="width: 0%"></div>
    </div>

    <div class="result-test-case-list">
    </div>

    <div class="result-language-name">
        <% if (problem.kind == "word") { %>
            Your answer    
        <% } else { %>
            <div><%=language_name%> source file</div>
            <% if (problem.kind == "codegolf") { %>
                <div><%=size%> bytes</div>
            <% } %>
        <% } %>
    </div>

    <% if (problem.kind != "word") { %>
        <div class="result-compile-error">
            <pre>
                No errors or warnings.
            </pre>
        </div>
    <% } %>

    <div class="result-source-code">
        <pre><code class"<%=job.lang%>"><%=job.code%></code></pre>
    </div>
</div>